@{
    Layout = "_product_layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Checkout Page</title>
</head>
<body style="font-family: Arial, sans-serif; margin: 0; padding: 0;">
    <div style="background-color: #f8f8f8; padding: 20px;">
        <h2 style="text-align: center; color: #333;">Checkout</h2>
    </div>

    <div style="max-width: 600px; margin: 20px auto; padding: 20px; border: 1px solid #ddd; background-color: #fff;">
        <form>
            <!-- Shipping Information -->
            <h3 style="color: #333;">Shipping Information</h3>
            <div style="margin-bottom: 15px;">
                <label for="name" style="display: block;">Name</label>
                <input type="text" id="name" name="name" style="width: 100%; padding: 8px; border: 1px solid #ccc;">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="address" style="display: block;">Address</label>
                <input type="text" id="address" name="address" style="width: 100%; padding: 8px; border: 1px solid #ccc;">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="city" style="display: block;">City</label>
                <input type="text" id="city" name="city" style="width: 100%; padding: 8px; border: 1px solid #ccc;">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="zip" style="display: block;">Postal Code</label>
                <input type="text" id="zip" name="zip" style="width: 100%; padding: 8px; border: 1px solid #ccc;">
            </div>

            <!-- Payment Information -->
            <h3 style="color: #333;">Payment Information</h3>
            <div style="margin-bottom: 15px;">
                <label for="card-number" style="display: block;">Card Number</label>
                <input type="text" id="card-number" name="card-number" style="width: 100%; padding: 8px; border: 1px solid #ccc;">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="expiry" style="display: block;">Expiry Date</label>
                <input type="text" id="expiry" name="expiry" style="width: 100%; padding: 8px; border: 1px solid #ccc;">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="cvv" style="display: block;">CVV</label>
                <input type="text" id="cvv" name="cvv" style="width: 100%; padding: 8px; border: 1px solid #ccc;">
            </div>

            <!-- Order Summary -->
            <h3 style="color: #333;">Order Summary</h3>
            <div style="margin-bottom: 15px;">
                <p style="margin: 0;">Item 1: $10.00</p>
                <p style="margin: 0;">Item 2: $20.00</p>
            </div>
            <div style="margin-bottom: 15px; font-weight: bold;">
                <p style="margin: 0;">Total: $30.00</p>
            </div>

            <!-- Submit Button -->
            <div style="text-align: center;">
                <button type="submit" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; cursor: pointer;">Place Order</button>
            </div>
        </form>
    </div>
</body>
</html>

