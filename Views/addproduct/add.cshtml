
@{

	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Product Submission Form</title>
	<link href="~/css/addproduct.css" rel="stylesheet" />
</head>
<body>
    <div class="form-wrapper">
        <h2>Submit Your Product</h2>
        <form action="/addproduct/add" method="POST">
            <!-- Adjust the action based on your backend -->
            <div class="form-group">
                <label for="product-name">Product Name</label>
                <input type="text" id="product-name" name="product_name" placeholder="Enter product name" required>
            </div>

            <div class="form-group">
                <label for="product-price">Product Price</label>
                <input type="text" id="product-price" name="product_price"  placeholder="Enter price in pkr" required>
            </div>

            <div class="form-group">
                <label for="product-description">Product Description</label>
                <textarea id="product-description" name="product_description" rows="4" placeholder="Describe your product" required></textarea>
            </div>

            <button type="submit">Submit Product</button>
        </form>
    </div>
</body>
</html>
